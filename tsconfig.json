{
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@Components/*": [
        "components/*"
      ],
      "@States/*": [
        "state/*"
      ],
      "@Routes/*": [
        "routes/*"
      ],
      "@Assets/*": [
        "assets/*"
      ],
      "@Types/*": [
        "types/*"
      ],

      // All secret variable
      "@Injectable": [
        "injectable.tsx"
      ]
    }
  },
  "extends": "expo/tsconfig.base",
  "exclude": [
    "node_modules"
  ],
  "typeRoots": [
    "./types"
  ]
}